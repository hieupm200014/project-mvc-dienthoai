@model IEnumerable<Proj_day11_test.Models.tblCategory>

@{
    ViewBag.Title = "Index";
}

<h2>Danh mục sản phẩm</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MetaTitle)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetaTitle)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.Categoryid }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.Categoryid }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.Categoryid })
            </td>
        </tr>
    }

</table>